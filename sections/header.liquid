{% assign main_menu_linklist = linklists[settings.menu].links %}
<div x-data="{ mobileMenuOpen: false }" class="relative bg-white">
  <div class="mx-auto px-4 sm:px-6">
    <div class="flex justify-between items-center py-6 md:justify-start md:space-x-10">
      <!-- NAME or LOGO -->
      <div class="flex justify-start lg:flex-1 truncate">
        {% if settings.logo_image != blank %}
          <img
            src="{{ settings.logo_image | image_url: width: 300 }}"
            alt="{{ shop.name }}"
            class="h-8 w-auto"
            width="300"
            height="auto"
          >
        {% else %}
          <h1 class="text-xl font-bold truncate">{{ shop.name }}</h1>
        {% endif %}
      </div>

      <!-- MOBILE HAMBURGER BUTTON -->
      <div class="-mr-2 -my-2 ml-3 md:hidden">
        <button
          x-on:click="mobileMenuOpen = true"
          type="button"
          class="bg-white p-2 inline-flex items-center justify-center focus:outline-none"
          aria-label="Open menu"
        >
          {% render 'icon-hamburger-menu', size: 5 %}
        </button>
      </div>

      <!-- NAVIGATION MENU -->
      <nav class="hidden md:flex space-x-10">
        {% for link in main_menu_linklist %}
          {% if link.links != blank %}
            <div x-data="{ open: false }" class="relative">
              <button
                x-on:click="open = ! open"
                type="button"
                class="inline-flex items-center text-base text-gray-500 hover:text-gray-900"
                aria-expanded="false"
                aria-controls="submenu-{{ forloop.index }}"
              >
                {{ link.title }}
                {% render 'icon-chevron-down', size: 3 %}
              </button>
              <div
                x-show="open"
                x-on:click.away="open = false"
                class="absolute z-10 -ml-5 mt-5 transform px-2 w-screen max-w-md sm:px-0 lg:ml-0 lg:left-1/2 lg:-translate-x-1/2"
                id="submenu-{{ forloop.index }}"
                role="menu"
              >
                <div class="shadow-lg border ring-black ring-opacity-5 overflow-hidden rounded-lg">
                  <div class="relative grid gap-6 bg-white px-5 py-6 sm:gap-8 sm:p-8">
                    {% for sublink in link.links %}
                      <a
                        href="{{ sublink.url }}"
                        class="-m-3 p-3 flex items start rounded-lg hover:bg-gray-100"
                        role="menuitem"
                      >
                        <div class="ml-4">
                          <p class="text-gray-900 text-base font-medium">{{ sublink.title }}</p>
                        </div>
                      </a>
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>
          {% else %}
            <a href="{{ link.url }}" class="text-base text-gray-500 hover:text-gray-900">{{ link.title }}</a>
          {% endif %}
        {% endfor %}
      </nav>

      <!-- BUTTONS -->
      <div class="hidden md:flex items-center justify-end md:flex-1 space-x-5">
        <a
          href="{{ routes.cart_url }}"
          class="whitespace-nowrap text-base text-gray-500 hover:text-gray-900"
          aria-label="Cart"
        >
          {% render 'icon-shopping-bag', size: 6 %}
        </a>
        <a
          href="{{ routes.account_login_url }}"
          class="whitespace-nowrap text-base text-gray-500 hover:text-gray-900"
          aria-label="Login"
        >
          Login
        </a>
        <a
          href="{{ routes.account_register_url }}"
          class="text-base text-gray-500 hover:text-gray-900"
          aria-label="Register"
          >Register</a
        >
      </div>
    </div>
  </div>

  <!-- MOBILE NAVIGATION MENU -->
  <div
    x-show="mobileMenuOpen"
    x-on:click.away="mobileMenuOpen = false"
    class="absolute z-10 top-0 inset-x-0 p-2 transform origin-top-left md:hidden"
  >
    <div class="shadow-lg rounded-lg ring-1 ring-black ring-opacity-5 bg-white w-full">
      <div class="p-5 divide-y-2 divide-gray-50">
        <!-- MOBILE MENU HEADER TITLE PLUS CLOSE BUTTON -->
        <div class="flex items-center justify-between pb-3">
          <div>
            <h1 class="text-lg text-gray-500">{{ section.settings.mobile_menu_title }}</h1>
          </div>
          <div class="-mr-2">
            <button
              x-on:click="mobileMenuOpen = false"
              type="button"
              class="bg-white rounded-md p-2 text-gray-500"
              aria-label="Close menu"
            >
              {% render 'icon-close', size: 3 %}
            </button>
          </div>
        </div>

        <!-- NAVIGATION LINKS FOR MOBILE MENU -->
        <div class="pt-3">
          <nav class="grid gap-y-7">
            {% for link in main_menu_linklist %}
              {% assign link_handle = link.handle | replace: '-', '_' %}
              {% if link.links != blank %}
                <div x-data="{ {{ link_handle }}: false }" class="relative">
                  <button
                    x-on:click="{{ link_handle }} = ! {{ link_handle }}"
                    type="button"
                    class="text-base text-gray-500 hover:text-gray-900 flex items-center justify-between w-full"
                    aria-expanded="false"
                    aria-controls="submenu-{{ forloop.index }}"
                  >
                    <div>{{ link.title }}</div>
                    {% render 'icon-chevron-down', size: 3 %}
                  </button>

                  <div
                    x-show="{{ link_handle }}"
                    x-on:click.away="{{ link_handle }} = false"
                    class="grid gap-y-7 py-3"
                    id="submenu-{{ forloop.index }}"
                    role="menu"
                  >
                    {% for sublink in link.links %}
                      <a
                        href="{{ sublink.url }}"
                        class="-m-3 p-3 mt-2 flex items-center rounded-md text-gray-500 hover:text-gray-900 hover:bg-gray-50"
                        role="menuitem"
                      >
                        <span class="ml-3 text-base font-medium text-gray-500">{{ sublink.title }}</span>
                      </a>
                    {% endfor %}
                  </div>
                </div>
              {% else %}
                <a
                  href="{{ link.url }}"
                  class="-m-3 p-3 flex items-center rounded-md text-gray-500 hover:text-gray-900 hover:bg-gray-50"
                >
                  {{ link.title }}
                </a>
              {% endif %}
            {% endfor %}
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Header (Navbar)",
  "settings": [
    {
      "type": "text",
      "id": "mobile_menu_title",
      "label": "Title",
      "default": "Menu",
      "info": "This is the title that appears in the mobile menu."
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Header Menu",
      "default": "main-menu",
      "info": "This is the main menu that appears in the desktop menu."
    },
    {
      "type": "image_picker",
      "id": "image_with_text_image",
      "label": "Image (Logo)"
    },
    {
      "type": "select",
      "id": "header_layout",
      "label": "Header Layout",
      "options": [
        {
          "value": "left",
          "label": "Logo/Name are on the left side"
        },
        {
          "value": "centered",
          "label": "Logo/Name are centered"
        }
      ],
      "default": "centered",
      "info": "Select the layout for the desktop header."
    }
  ]
}
{% endschema %}

<style>
  .header {
    padding: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px 3rem {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px 3rem;
  }

  .section-header {
    position: sticky; /* This is for fixing a Safari z-index issue. PR #2147 */
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-header {
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }

  @media screen and (min-width: 990px) {
    .header {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

<script>
  document.addEventListener('alpine:init', () => {
    Alpine.data('menu', () => ({
      open: false,
      toggle() {
        this.open = !this.open;
      },
      close() {
        this.open = false;
      },
    }));
  });
</script>
