<div x-data="{ mobileMenuOpen: false }" class="relative bg-white">
  <div class="mx-auto px-4 sm:px-6">
    <div class="flex justify-between items-center py-6 md:justify-start md:space-x-10">
      {% comment %} Name and or Logo {% endcomment %}
      <div class="flex justify-start lg:flex-1">
        {% if settings.header_logo != blank %}
          <img
            src="{{ settings.header_logo | image_url: '200x' }}"
            alt="{{ shop.name }}"
            class="h-10 w-auto"
            width="200"
            height="auto"
          >
        {% else %}
          <h1 class="text-xl font-bold">{{ shop.name }}</h1>
        {% endif %}
      </div>

      {% comment %} Mobile Hamburger Button {% endcomment %}
      <div class="-mr-2 -my-2 ml-3 md:hidden">
        <button
          x-on:click="mobileMenuOpen = true"
          type="button"
          class="bg-white p-2 inline-flex items-center justify-center focus:outline-none"
        >
          {% render 'icon-hamburger-menu', size: 5 %}
        </button>
      </div>

      {% comment %} Desktop Navigation Menu {% endcomment %}
      <nav
        x-data="{ open: false }"
        class="hidden md:flex space-x-10"
      >
        {% for link in linklists['main-menu'].links %}
          {% if link.links != blank %}
            <div class="relative">
              <button
                x-on:click="open = ! open"
                type="button"
                class="inline-flex items-center text-base text-gray-500 hover:text-gray-900"
              >
                {{ link.title }}
                {% render 'icon-chevron-down', size: 3 %}
              </button>
              <div
                x-show="open"
                @click.away="open = false"
                class="absolute z-10 -ml-5 mt-5 transform px-2 w-screen max-w-md sm:px-0 lg:ml-0 lg:left-1/2 lg:-translate-x-1/2"
              >
                <div class="shadow-lg border ring-black ring-opacity-5 overflow-hidden rounded-lg">
                  <div class="relative grid gap-6 bg-white px-5 py-6 sm:gap-8 sm:p-8">
                    {% for sublink in link.links %}
                      <a href="{{ sublink.url }}" class="-m-3 p-3 flex items start rounded-lg hover:bg-gray-100">
                        <div class="ml-4">
                          <p class="text-gray-900 text-base font-medium">{{ sublink.title }}</p>
                        </div>
                      </a>
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>
          {% else %}
            <a href="{{ link.url }}" class="text-base text-gray-500 hover:text-gray-900">{{ link.title }}</a>
          {% endif %}
        {% endfor %}
      </nav>

      {% comment %} Buttons {% endcomment %}
      <div class="hidden md:flex items-center justify-end md:flex-1 space-x-5">
        <a href="{{ routes.cart_url }}" class="whitespace-nowrap text-base text-gray-500 hover:text-gray-900">
          {% render 'icon-shopping-bag', size: 6 %}
        </a>
        <a href="{{ routes.account_login_url }}" class="whitespace-nowrap text-base text-gray-500 hover:text-gray-900">
          Login
        </a>
        <a href="{{ routes.account_register_url }}" class="text-base text-gray-500 hover:text-gray-900">Register</a>
      </div>
    </div>
  </div>

  {% comment %} Mobile Navigation Menu {% endcomment %}
  <div x-show="mobileMenuOpen" class="absolute z-10 top-0 inset-x-0 p-2 transform origin-top-left md:hidden">
    <div class="shadow-lg rounded-lg ring-1 ring-black ring-opacity-5 bg-white w-full">
      <div class="p-5 divide-y-2 divide-gray-50">
        {% comment %} Mobile Menu Header Title + Close Button {% endcomment %}
        <div class="flex items-center justify-between pb-3">
          <div>
            <h1 class="text-lg text-gray-500">{{ section.settings.mobile_menu_title }}</h1>
          </div>
          <div class="-mr-2">
            <button
              x-on:click="mobileMenuOpen = false"
              type="button"
              class="bg-white rounded-md p-2 text-gray-500"
            >
              {% render 'icon-close', size: 3 %}
            </button>
          </div>
        </div>

        {% comment %} Navigation Links for Mobile Menu {% endcomment %}
        <div class="pt-3">
          <nav class="grid gap-y-7">
            {% for link in linklists['main-menu'].links %}
              {% assign link_handle = link.handle | replace: '-', '_' %}
              {% if link.links != blank %}
                <div x-data="{ {{ link_handle }}: false }" class="relative">
                  <button
                    x-on:click="{{ link_handle }} = ! {{ link_handle }}"
                    type="button"
                    class="text-base text-gray-500 hover:text-gray-900 flex items-center justify-between w-full"
                  >
                    <div>{{ link.title }}</div>
                    {% render 'icon-chevron-down', size: 3 %}
                  </button>

                  <div x-show="{{ link_handle }}" class="grid gap-y-7 py-3">
                    {% for sublink in link.links %}
                      <a
                        href="{{ sublink.url }}"
                        class="-m-3 p-3 mt-2 flex items-center rounded-md text-gray-500 hover:text-gray-900 hover:bg-gray-50"
                      >
                        <span class="ml-3 text-base font-medium text-gray-500">{{ sublink.title }}</span>
                      </a>
                    {% endfor %}
                  </div>
                </div>
              {% else %}
                <a
                  href="{{ link.url }}"
                  class="-m-3 p-3 flex items-center rounded-md text-gray-500 hover:text-gray-900 hover:bg-gray-50"
                >
                  {{ link.title }}
                </a>
              {% endif %}
            {% endfor %}
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Header (Navigation Bar)",
  "settings": [
    {
      "type": "header",
      "content": "Section Guide: <URL>"
    },
    {
      "type": "text",
      "id": "mobile_menu_title",
      "label": "Title",
      "default": "Menu",
      "info": "This is the title that appears in the mobile menu when opened."
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Header Menu",
      "default": "main-menu",
      "info": "Select the navigation menu to use in the primary header."
    },
    {
      "type": "header",
      "content": "Title/Logo Settings"
    },
    {
      "type": "image_picker",
      "id": "header_logo",
      "label": "Logo",
      "info": "Upload an image to replace the default shop name in the header. Suggested image size of 150x50 pixels."
    },
    {
      "type": "select",
      "id": "logo_position",
      "options": [
        {
          "value": "left",
          "label": "Left Side"
        },
        {
          "value": "center",
          "label": "Centered"
        },
        {
          "value": "right",
          "label": "Right Side"
        }
      ],
      "default": "center",
      "label": "Desktop Logo/Title Position",
      "info": "Select the position of the logo/title in the Desktop Header."
    },
    {
      "type": "select",
      "id": "mobile_logo_position",
      "options": [
        {
          "value": "center",
          "label": "Centered"
        },
        {
          "value": "left",
          "label": "Left Side"
        },
        {
          "value": "right",
          "label": "Right Side"
        }
      ],
      "default": "center",
      "label": "Mobile Logo Position",
      "info": "Select the position of the logo/title in the Mobile Header."
    },
    {
      "type": "header",
      "content": "Functionality Settings"
    },
    {
      "type": "select",
      "id": "desktop_menu_selection",
      "options": [
        {
          "value": "dropdown",
          "label": "Dropdown Menu"
        },
        {
          "value": "mega",
          "label": "Mega Menu"
        },
        {
          "value": "drawer",
          "label": "Drawer Menu"
        }
      ],
      "default": "dropdown",
      "label": "Desktop Menu Type",
      "info": "Set the navigation menu type."
    },
    {
      "type": "select",
      "id": "sticky_header",
      "options": [
        {
          "value": "none",
          "label": "Header is not sticky"
        },
        {
          "value": "on-scroll-up",
          "label": "Header is sticky when scrolling up"
        },
        {
          "value": "always",
          "label": "Header is always sticky"
        },
        {
          "value": "reduce-logo-size",
          "label": "Reduce logo size when scrolling up"
        }
      ],
      "default": "on-scroll-up",
      "label": "Sticky Header",
      "info": "Select how the header should behave when the user scrolls."
    },
    {
      "type": "checkbox",
      "id": "enable_country_selector",
      "default": false,
      "label": "Enable the Country Selector. Requires localization to be setup."
    },
    {
      "type": "header",
      "content": "Margin Settings (Space Around)"
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Bottom Margin",
      "default": 0
    },
    {
      "type": "header",
      "content": "Padding Settings (Space Between)"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 10
    }
  ]
}
{% endschema %}
